@model Models.ViewModels.CourseEntryVM
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Entry</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div>
        <h1>Course Entity:</h1>
        <form method="POST">
            <div class="container">
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, null, new { @class = "text-danger" })
                    <div class="form-group">
                        <label for="Organization" class="col-md-2">Organization</label>
                        <div class="col-md-10">
                            @Html.DropDownListFor(c => c.OrganizationId, Model.OrganizationLookUps, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Name" class="col-md-2">Name</label>
                        <div class="col-md-10">
                            @Html.TextBoxFor(c => c.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(c => c.Name, null, new {@class = "text-danger"})
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Code" class="col-md-2">Code</label>
                        <div class="col-md-10">
                            @Html.TextBoxFor(c => c.Code, new { @class = "form-control" })
                            @Html.ValidationMessageFor(c => c.Code, null, new {@class = "text-danger"})
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label for="Course Duretion" class="col-md-2">Course Duretion(hrs)</label>
                        <div class="col-md-10">
                            @Html.TextBoxFor(c => c.CourseDuration, new { @class = "form-control" })
                            @Html.ValidationMessageFor(c => c.CourseDuration, null, new {@class = "text-danger"})
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Credit" class="col-md-2">Credit</label>
                        <div class="col-md-10">
                            @Html.TextBoxFor(c => c.Credit, new { @class = "form-control" })
                            @Html.ValidationMessageFor(c => c.Credit, null, new {@class = "text-danger"})
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="OutLine" class="col-md-2">OutLine</label>
                        <div class="col-md-10">
                            @Html.TextAreaFor(c => c.Outline, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Tags" class="col-md-2">Tags</label>
                        <div class="col-md-10">
                            @Html.TextAreaFor(c => c.Tags, new { @class = "form-control" })
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="Submit" class="btn btn-primary col-md-offset-2" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</body>
</html>
